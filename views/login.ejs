<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
  />
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
    crossorigin="anonymous"
  />
<link href="/styles.css" rel="stylesheet">
    <title>Login</title>
</head>
<body>
    <%- include('partials/header') %>
    <section class="container max-w-screen-md m-auto py-3">
    <form action="/login" method="post">
        <h1 class="text-3xl font-semibold text-center">Login</h1>
        <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
            <div class="text-danger my-3">
                <ul>
                    <% errors.forEach(function(error) { %>
                        <li><%= error %></li>
                    <% }) %>
                </ul>
            </div>
        <% } %>
        <div class="mb-3">
            <label for="email" class="form-label">Email:</label>
            <input type="email" id="email" name="email"  class="form-control"><br>
           </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password:</label>
            <input type="password" id="password" name="password"  class="form-control"><br>
            </div>
            <div class="mb-3">
                <button type="submit" class="w-full bg-red-600 text-2xl font-semibold text-white hover:bg-red-700 py-2 rounded-md">Login</button>
            </div>
            <div class="flex gap-3"><a href="/register">Register?</a><a href="">Forget password?</a></div>
        </form>
</section>
<%- include('partials/footer') %>
</body>
</html>
