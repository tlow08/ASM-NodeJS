<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link href="/styles.css" rel="stylesheet" />
    <title>List User</title>
  </head>
  <body>
    <%- include('../partials/headerAdmin') %> <%- include('../partials/menuAdmin') %>
    <main class="grid grid-cols-10 mt-14">
      <section class="col-span-2"></section>
      <section class="col-span-8">
        <h1 class="text-3xl font-semibold">List Of Products</h1>
        <a href="/admin/createProduct" class="btn btn-primary my-3"
          >Add new product</a
        >
        <table class="table table-hover ">
            <thead>
              <tr>
                <th>#</th>
                <th>ID</th>
                <th>Username</th>
                <th>Email</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% listUser.forEach(function(item) { %>
              <tr>
                <td><input type="checkbox"></td>
                <td><%= item._id %></td>
                <td><%= item.username %></td>
                <td><%= item.email %></td>               
                <td>
                </td>
              </tr>
              <% }); %>
            </tbody>
        </table>
      </section>
    </main>
  </body>
</html>
