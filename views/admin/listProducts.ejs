<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link href="/styles.css" rel="stylesheet" />
    <title>List Product</title>
  </head>
  <body>
    <%- include('../partials/headerAdmin') %> <%- include('../partials/menuAdmin') %>
    <main class="grid grid-cols-10 mt-14">
      <section class="col-span-2"></section>
      <section class="col-span-8">
        <h1 class="text-3xl font-semibold">List Of Products</h1>
        <a href="/admin/createProduct" class="btn btn-primary my-3"
          >Add new product</a
        >
        <table class="table table-hover ">
            <thead>
              <tr>
                <th>#</th>
                <th>ID</th>
                <th>Title</th>
                <th>Price</th>
                <th>Description</th>
                <th>Thumbnail</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% listProduct.forEach(function(item) { %>
              <tr>
                <td><input type="checkbox"></td>
                <td><%= item._id %></td>
                <td><%= item.title %></td>
                <td><%= item.price %></td>
                <td><%= item.description %></td>
                <td>
                  <img
                    class="w-auto max-h-[100px]"
                    src="/images/<%=item.thumbnail%>"
                    alt=""
                  />
                </td>
                <td>
                  <div class="flex gap-2">
                    <a href="/admin/editProduct/<%= item._id %>" class="btn btn-warning">Update</a>
                  <form action="/admin/deleteProduct/<%= item._id %>" method="POST">
                    <button
                      onclick="return confirm('Are you sure?')"
                      type="submit" class="btn btn-danger"
                    >
                      Delete
                    </button>
                  </form>
                  </div>
                  <!-- <a onclick="return confirm('Delete product?')" class="btn btn-danger" href="/admin/deleteProduct/<%= item._id %>">Delete</a> -->
                </td>
              </tr>
              <% }); %>
            </tbody>
        </table>
      </section>
    </main>
  </body>
</html>
